generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}


enum TaskStatus {
  OPEN
  IN_PROGRESS
  DONE
  DELETED
}

model Task {
  id          String     @id @default(uuid()) @db.Uuid
  title       String
  description String
  status      TaskStatus @default(OPEN)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("tasks")
}